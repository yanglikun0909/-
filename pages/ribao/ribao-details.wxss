/* pages/ribao/ribao-details.wxss */
.wx-canvas {
  position: relative;
  top: 0;
  bottom: 0;
  left: 4%;
  right: 0;
  display: flex;
  width: 92%;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background:#fff;
  box-shadow: 0 10rpx 10rpx #8888880a;
}
.rl-table{
  height: 160rpx;
  white-space: nowrap;
  display: flex;
  flex-direction: row;
  box-shadow: 2rpx 2rpx 10rpx #8888883a;
 
 }
 .rl-table-item{
   width: 200rpx;
   font-size: 26rpx;
   height: 60rpx;
   line-height: 60rpx;
   text-align: center;
   display: inline-block;
   background:rgba(204, 204, 204, 0.164);
 }
 .tables{
   width: 100%;
   background:#fff;
 }
 .tops{
   margin: 20px auto;
   width: 92%;
   height: 120rpx;
   background: #fff;
   padding: 20rpx 0;
 }
 .text{
   margin-left: 50rpx;
   font-size: 30rpx;
   color: #333;
   line-height: 50rpx;

 }