/* pages/personnel-management/personnel-management.wxss */
.items-p{
  margin: 20rpx auto;
  width: 92%;
  height: auto;
  border-radius: 12rpx;
  background:#fff;
}

.personnel-item{
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid rgba(238, 238, 238, 0.568)
}
.personnel-title{
  font-size: 30rpx;
  line-height: 80rpx;
  color:#333;
  font-weight: 600;
  margin-left: 20rpx;
}
.personnel-image{
  width: 160rpx;
  height: 160rpx;
  margin-top:20rpx;
  margin-bottom:20rpx;
  margin-left: auto;
  margin-right: 20rpx;
}

.personnel-items{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid rgba(238, 238, 238, 0.568)
}
.personnel-info{
  font-size: 30rpx;
  line-height: 80rpx;
  color:#333;
  margin-left: auto;
  margin-right: 40rpx;
}
