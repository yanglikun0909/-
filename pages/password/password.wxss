  margin-left: 20rpx;
}
.pwd-btn{
  width: 92%;
  height: 80rpx;
  background:rgba(101, 211, 165, 0.733);
  margin:60rpx auto;
  border-radius: 12rpx;
  color:rgba(255, 255, 255, 0.849);
  text-align: center;
  line-height: 80rpx;
}