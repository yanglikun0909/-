  background:#fff;
  margin:20rpx auto;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius: 12rpx;
}
.input-icon{
  width: 50rpx;
  height: 50rpx;
  margin-left: 20rpx;
}
.input-pwd{
  width:90%;
  height: 100%;
