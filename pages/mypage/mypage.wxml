    <image class="img" mode="cover" src="../../images/view.png"></image>
  </button>
  <view class="line-item-next"></view>
  <button class="item-next" bindtap="toPassword">
    <view class="item-next-text">密码修改</view> 
    <image class="img" mode="cover" src="../../images/view.png"></image>
  </button>
  <view class="line-item-next"></view>
  <button class="item-next"  bindtap="toPersinnel"> 
     <view class="item-next-text">人员管理</view> 
    <image class="img" mode="cover" src="../../images/view.png"></image>
  </button>
</view>
