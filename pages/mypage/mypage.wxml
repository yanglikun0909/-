<view class="user-layout">
  <view class="user-info">
   <image style="width:150rpx; height:150rpx" src="../../images/user-base.png"></image>
  </view>
  <view class="user-message">
    <view class="user-name">张工</view>
    <view class="user-role">自建工人</view>
  </view>
</view>

<view class="item-dothing">
