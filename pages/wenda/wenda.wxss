/* pages/wenda/wenda.wxss */
.wenda-items{
  margin: 20px auto;
  width: 92%;
  height: 280rpx;
  background: #fff;
  padding: 20rpx 0;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.wenda-header{
   width: 100%;
   margin-left: 40rpx;
}
.wenda-title{
  /* margin-left: 50rpx; */
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  line-height: 50rpx;
}
.wenda-desc{
  font-size: 22rpx;
  color: #aaa;
  line-height: 50rpx;
}
.wenda-foots{
  width: 100%;
  height: 60rpx;
  display: flex;
  flex-direction: row;
}
.wenda-time{
  margin-left: 40rpx;
  font-size: 22rpx;
  color: #aaa;
  line-height: 50rpx;
}
.wenda-right{
  width: 30%;
  height: 100%;
  font-size: 22rpx;
  color: #aaa;
  line-height: 50rpx;
  margin-left: auto;
  margin-right: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.wenda-ans{
   height: 50rpx;
   padding: 0 10rpx;
   color:#1295dbd8;
   line-height: 50rpx;
   background: #1295db15;
}
.wenda-look{
  color:rgba(185, 177, 177, 0.918);
  height: 50rpx;
  padding: 0 10rpx;
  line-height: 50rpx;
  background: rgba(204, 204, 204, 0.137);


}