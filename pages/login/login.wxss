/* pages/login/login.wxss */
.login-view{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height:80%;
  background: #fff;
  border-radius: 50rpx;
}
.login-top{
  position: relative;
  width: 100%;
  height: 500rpx;
  filter: blur(2rpx);
}
.cur{
  color: #267621
}
.title{
  width: 50%;
  height: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  font-size: 30rpx;
  line-height: 40rpx;
  margin:40rpx auto;
  color:#aaa;
}
.name-and-pwd{
  width: 50%;
  margin:20rpx auto;
  
}
.login-input{
  border-radius: 10rpx;
  font-size: 28rpx;
  height:70rpx;
  line-height: 60rpx;
  text-align: center;
  margin: 50rpx 0;
  background: rgba(187, 187, 187, 0.205);
}
.login-submit{
  width: 50%;
  height: 80rpx;
  margin:20rpx auto;
  background: #448b3f77;
  border-radius: 10rpx;
  font-size: 28rpx;
  height:70rpx;
  line-height: 70rpx;
  text-align: center;
  color:#fff;
}